<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.vk.fesswood.billdivider.ui.activity.ContactActivity">
    <FrameLayout
        android:id="@+id/ffContactWrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/tilSum"
        android:layout_alignLeft="@+id/tilSum"
        android:layout_alignStart="@+id/tilSum" >

    </FrameLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilSum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ffContactWrapper"
        android:layout_toRightOf="@+id/ffContactWrapper"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="26dp">


    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nextFocusDown="@+id/fabOK"
        android:inputType="number"
        android:imeOptions="actionDone"
        android:hint="@string/etContact"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    </android.support.design.widget.TextInputLayout>
</RelativeLayout>
